<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:background="@null">

    <View
        android:id="@+id/item_lesson_progress_additional_view"
        android:layout_width="3dp"
        android:layout_height="10dp"
        android:layout_marginStart="11dp"
        android:background="@color/black"
        android:backgroundTint="@color/mountain_meadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_lesson_progress_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_progress_indicator"
        android:tint="@color/mountain_meadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_lesson_progress_view"
        android:layout_width="3dp"
        android:layout_height="170dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:backgroundTint="@color/mountain_meadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_lesson_progress_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/item_lesson_progress_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="08:00 - 08:45" />

    <include
        android:id="@+id/item_lesson_progress_included_layout"
        layout="@layout/item_lesson"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_lesson_progress_view"
        app:layout_constraintTop_toBottomOf="@+id/item_lesson_progress_time_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>