<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_shark_rounded"
    android:clickable="false"
    android:focusable="false">

    <TextView
        android:id="@+id/item_lesson_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="История" />

    <TextView
        android:id="@+id/item_lesson_additional_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@color/white_60"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_lesson_title_tv"
        tools:text="История" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_lesson_open_skype_btn"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_open_in_skype"
        android:clickable="false"
        android:focusable="false"
        android:foreground="?android:selectableItemBackground"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ru.androidlearning.listsdesign.utils.VerticalTextView
            android:id="@+id/item_lesson_open_in_tv"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:lines="1"
            android:paddingTop="8dp"
            android:text="@string/open_in"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/item_lesson_open_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_lesson_open_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_videocam"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_lesson_open_in_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>